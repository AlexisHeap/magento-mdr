<?xml version="1.0"?>

<page layout="2columns-right" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main">
            <block name="blog.post.detail" template="Cimaco_Blog::post/detail.phtml"/>
        </referenceContainer>
        <referenceContainer name="sidebar.main">
            <block name="blog.post.sidebar"
            template="Cimaco_Blog::post/sidebar.phtml"/>
        </referenceContainer>
        <move element="wishlist_sidebar" destination="sidebar.additional" before="catalog.compare.sidebar"/>
 
    </body>
</page>


